<mapper namespace="com.tellus.service.core.mapper.RelationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tellus.service.core.model.RelationEntity">
        <id column="TYPE" property="type" />
